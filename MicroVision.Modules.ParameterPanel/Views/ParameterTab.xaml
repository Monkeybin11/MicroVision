<UserControl x:Class="MicroVision.Modules.ParameterPanel.Views.ParameterTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicroVision.Modules.ParameterPanel.Views"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <WrapPanel Orientation="Vertical">
            <!--form entry start-->
            <DockPanel Style="{StaticResource DockPanelStyle}">
                <Label Style="{StaticResource LabelStyle}">Exposure time:</Label>
                <xctk:IntegerUpDown />
            </DockPanel>
            <!--form entry end-->

            <DockPanel Style="{StaticResource DockPanelStyle}">
                <Label Style="{StaticResource LabelStyle}">Gain:</Label>
                <xctk:DecimalUpDown Maximum="20" Minimum="0"/>
            </DockPanel>

            <DockPanel Style="{StaticResource DockPanelStyle}">
                <Label Style="{StaticResource LabelStyle}">Laser ON time:</Label>
                <xctk:IntegerUpDown />
            </DockPanel>
        </WrapPanel>
    </Grid>
</UserControl>
